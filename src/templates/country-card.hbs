<div class="card">
    <div class="card-body">
        <h1 class="card-title">{{name}}</h1>
        <p class="card-text">Capital: {{capital}}</p>
        <p class="card-text">Popuiation: {{population}}</p>
        <p class="card-text">Languages:</p>
        <ul>
            {{#each languages}}
            <li>
                {{name}}
            </li>
            {{/each}}
        </ul>
    </div>

    <div class="card -img">
        <img src="{{flag}}" alt="{{name}}">
    </div>

</div>